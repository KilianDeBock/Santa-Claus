{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2022,
    "project": [
      "tsconfig.json"
    ],
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "no-labels": "error",
    "no-lonely-if": "error",
    "no-nested-ternary": "error",
    "no-else-return": "error",
    "no-shadow": "error",
    "no-var": "error",
    "prefer-const": "error",
    "yoda": "error",
    "@typescript-eslint/explicit-function-return-type": "error",
    "@typescript-eslint/prefer-nullish-coalescing": "error"
  }
}
